{
  "designSystem": {
    "name": "Vercel Design System",
    "version": "1.0.0",
    "description": "Design system based on Vercel's web interface",
    "colors": {
      "light": {
        "background": "#FAFAFA",
        "foreground": "#000000",
        "card": "#FFFFFF",
        "cardForeground": "#000000",
        "muted": "#F5F5F5",
        "mutedForeground": "#737373",
        "border": "#E5E5E5",
        "borderDark": "#D4D4D4",
        "accent": "#000000",
        "accentForeground": "#FFFFFF"
      },
      "dark": {
        "background": "#000000",
        "foreground": "#FAFAFA",
        "card": "#0A0A0A",
        "cardForeground": "#FAFAFA",
        "muted": "#171717",
        "mutedForeground": "#A3A3A3",
        "border": "#262626",
        "borderDark": "#404040",
        "accent": "#FAFAFA",
        "accentForeground": "#000000"
      }
    },
    "typography": {
      "fontFamily": {
        "sans": "Geist, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
        "mono": "Geist Mono, Menlo, Monaco, Courier New, monospace"
      },
      "fontSize": {
        "xs": "12px",
        "sm": "13px",
        "base": "14px",
        "lg": "16px",
        "xl": "18px",
        "2xl": "24px",
        "3xl": "30px"
      },
      "fontWeight": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      },
      "lineHeight": {
        "tight": "1.25",
        "normal": "1.5",
        "relaxed": "1.75"
      }
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "2xl": "32px",
      "3xl": "48px"
    },
    "borderRadius": {
      "sm": "4px",
      "md": "6px",
      "lg": "8px",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 0 0 1px rgba(0,0,0,0.04)",
      "md": "0 0 0 1px rgba(0,0,0,0.08), 0 2px 4px rgba(0,0,0,0.04)",
      "lg": "0 0 0 1px rgba(0,0,0,0.08), 0 4px 8px rgba(0,0,0,0.08)"
    },
    "components": {
      "button": {
        "height": "32px",
        "padding": "0 12px",
        "borderRadius": "6px",
        "fontSize": "14px",
        "fontWeight": "500"
      },
      "input": {
        "height": "32px",
        "padding": "0 12px",
        "borderRadius": "6px",
        "fontSize": "14px"
      },
      "card": {
        "borderRadius": "8px",
        "padding": "16px"
      }
    }
  }
}
